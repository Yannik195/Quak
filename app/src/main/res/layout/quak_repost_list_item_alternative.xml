<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reposter_pp_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="2dp"
            app:srcCompat="@drawable/circle" />

        <TextView
            android:id="@+id/reposter_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reposter_pp_image_view"
            android:paddingLeft="8dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/repost_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="22m ago "
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/repost_list_item_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reposter_username"
            android:layout_toEndOf="@+id/reposter_pp_image_view"
            android:paddingLeft="8dp"
            android:text="Irgend ein Text..."
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_below="@+id/message_1_message_text_view"
            android:background="@drawable/rounded_rectangle"
            android:elevation="4dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/message_1_pp_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:elevation="2dp"
            app:srcCompat="@drawable/circle" />

        <TextView
            android:id="@+id/message_1_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_1_pp_image_view"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/message_1_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_1_username"
            android:layout_toEndOf="@+id/message_1_pp_image_view"
            android:paddingBottom="4dp"
            android:text="TextView"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/like_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_action_like2" />

        <TextView
            android:id="@+id/like_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">


        <ImageView
            android:id="@+id/message_2_pp_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:srcCompat="@drawable/circle" />

        <LinearLayout
            android:id="@+id/layout_message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/message_2_pp_image_view"
            android:background="@drawable/message_background_1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/message_2_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/message_2_pp_image_view"
                android:paddingRight="8dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/message_2_message_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_2_username"
                android:layout_toLeftOf="@+id/message_2_pp_image_view"
                android:paddingRight="8dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/message_3_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_3_pp_image_view"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message_3_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_3_username"
            android:layout_toRightOf="@+id/message_3_pp_image_view"
            android:paddingBottom="4dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_below="@+id/message_3_message_text_view"

            android:background="@drawable/rounded_rectangle"
            android:scaleType="centerCrop"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/message_3_pp_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="8dp"
            android:elevation="2dp"
            android:visibility="gone"
            app:srcCompat="@drawable/circle" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/image_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />
</LinearLayout>